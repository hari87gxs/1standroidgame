rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default: deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow read/write to groups collection
    match /groups/{groupId} {
      allow read: if true;
      allow create: if request.auth != null || true; // Allow creation for now
      allow update, delete: if request.auth != null || true;
      
      // Allow read/write to members subcollection
      match /members/{memberId} {
        allow read, write: if true;
      }
    }
    
    // Allow read/write to challenges collection
    match /challenges/{challengeId} {
      allow read, write: if true;
    }
  }
}
