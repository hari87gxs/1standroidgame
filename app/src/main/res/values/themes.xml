<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Fixed: AppCompat base with AppCompat attributes only -->
    <style name="Base.Theme.AthreyasSums" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- AppCompat color attributes (compatible everywhere) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        
        <!-- Status bar color (use AppCompat attribute) -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.AthreyasSums" parent="Base.Theme.AthreyasSums" />
</resources>